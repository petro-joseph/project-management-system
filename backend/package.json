{
  "name": "project-management-system",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -d src/config/data-source.ts",
    "migration:create": "npm run typeorm migration:create",
    "migration:run": "npm run typeorm migration:run -- -d src/config/data-source.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/config/data-source.ts",
    "test": "jest --runInBand",
    "test:unit": "jest --selectProjects unit --runInBand",
    "test:integration": "jest --selectProjects integration --runInBand",
    "test:e2e": "jest --selectProjects e2e --runInBand",
    "test:setup-db": "ts-node src/test/setup-test-db.ts",
    "pretest": "npm run test:setup-db",
    "pretest:integration": "npm run test:setup-db",
    "pretest:e2e": "npm run test:setup-db",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit:watch": "jest --selectProjects unit --watch",
    "test:integration:watch": "jest --selectProjects integration --watch",
    "test:e2e:watch": "jest --selectProjects e2e --watch",
    "test:unit:coverage": "jest --selectProjects unit --coverage",
    "test:integration:coverage": "jest --selectProjects integration --coverage",
    "test:e2e:coverage": "jest --selectProjects e2e --coverage",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:ci:unit": "jest --ci --coverage --runInBand --selectProjects unit",
    "test:ci:integration": "jest --ci --coverage --runInBand --selectProjects integration",
    "test:ci:e2e": "jest --ci --coverage --runInBand --selectProjects e2e",
    "test:clear": "jest --clearCache",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:changed": "jest --onlyChanged",
    "test:related": "jest --findRelatedTests",
    "test:report": "jest --json --outputFile=test-report.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node-cache": "^4.2.5",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
